{
  "output_dir": "./",
  "seed": 42,
  "num_workers": 10,
  "gpu_ids": [
    0,1
  ],
  "cache_dir": "./",
  "pretraining": {
    "enabled": false,
    "dataset_path": "./multirx_analysis_dataset_onerow_oneobs.parquet",
    "treatment_column": "treatment",
    "architecture": {
      "model_type": "dragonnet",
      "embedding_model_name": "all-MiniLM-L6-v2",
      "dragonnet_representation_dim": 128,
      "dragonnet_hidden_outcome_dim": 64,
      "explicit_confounder_texts": [
        "What is the patient's age and health status?",
        "What comorbidities does the patient have?"
      ],
      "chunk_size": 128,
      "chunk_overlap": 32
    },
    "training": {
      "learning_rate": 1e-5,
      "optimizer": "adamw",
      "lr_schedule": "linear",
      "epochs": 1,
      "batch_size": 8,
      "alpha_propensity": 1.0,
      "beta_targreg": 0.1,
      "init_latents_from_kmeans": true
    }
  },
  "applied_inference": {
    "skip": false,
    "dataset_path": "../../example_synthetic_dataset_strict/dataset.parquet",
    "text_column": "clinical_text",
    "outcome_column": "outcome_indicator",
    "treatment_column": "treatment_indicator",
    "split_column": "split",
    "architecture": {
      "model_backbone": "modernbert",
      "model_type": "dragonnet",
      "modernbert_model_name": "answerdotai/ModernBERT-base",
      "modernbert_max_length": 8192,
      "freeze_modernbert": false,
      "dragonnet_representation_dim": 128,
      "dragonnet_hidden_outcome_dim": 64
    },
    "training": {
      "learning_rate": 1e-5,
      "optimizer": "adamw",
      "lr_schedule": "linear",
      "epochs": 20,
      "batch_size": 8,
      "alpha_propensity": 1.0,
      "beta_targreg": 0.0
    },
    "use_pretrained_weights": true
  },
  "plasmode_experiments": {
    "enabled": false,
    "num_repeats": 10,
    "save_datasets": true,
    "evaluator_use_generator_confounders": false,
    "train_fraction": 0.8,
    "generator_architecture": {
      "model_type": "dragonnet",
      "embedding_model_name": "all-MiniLM-L6-v2",
      "arctanh_transform": false,
      "dragonnet_representation_dim": 128,
      "dragonnet_hidden_outcome_dim": 64,
      "num_latent_confounders": 0,
      "features_per_confounder": 1,
      "explicit_confounder_texts": [
        "What is the patient's level of physical strength/performance status?",
        "What is the patient's smoking history?",
        "What mutations does the tumor have?",
        "What is the tumor's PD-L1 expression?"
      ],
      "chunk_size": 128,
      "chunk_overlap": 32
    },
    "generator_training": {
      "learning_rate": 1e-4,
      "optimizer": "adamw",
      "lr_schedule": "linear",
      "epochs": 2,
      "batch_size": 8,
      "alpha_propensity": 0.0,
      "beta_targreg": 0.00,
      "init_latents_from_kmeans": true
    },
    "evaluator_architecture": {
      "model_type": "dragonnet",
      "embedding_model_name": "all-MiniLM-L6-v2",
      "arctanh_transform": false,
      "dragonnet_representation_dim": 128,
      "dragonnet_hidden_outcome_dim": 64,
      "num_latent_confounders": 20,
      "features_per_confounder": 1,
      "explicit_confounder_texts": [
        "What is the patient's level of physical strength/performance status?",
        "What is the patient's smoking history?",
        "What mutations does the tumor have?",
        "What is the tumor's PD-L1 expression?"
      ],
      "chunk_size": 128,
      "chunk_overlap": 32
    },
    "evaluator_training": {
      "learning_rate": 1e-4,
      "optimizer": "adamw",
      "lr_schedule": "linear",
      "epochs": 2,
      "batch_size": 8,
      "alpha_propensity": 0.0,
      "beta_targreg": 0.00,
      "init_latents_from_kmeans": true
    },
    "plasmode_scenarios": [
      {
        "generation_mode": "phi_linear",
        "preserve_observed_treatments": true,
        "baseline_control_outcome_rate": 0.2,
        "target_ate_logit": 0.5,
        "outcome_heterogeneity_scale": 1.0,
        "ite_heterogeneity_scale": 1.0,
        "deep_nonlinear_hidden_dims": [
          64,
          32
        ],
        "deep_nonlinear_dropout": 0.0,
        "uplift_hidden_dims": [],
        "uplift_activation": "relu",
        "uplift_dropout": 0.0
      }
    ]
  }
}