{
  "output_dir": "./cdt_refactored_results",
  "seed": 42,
  "num_workers": 40,
  "gpu_ids": [0,1],
  "cache_dir": "./cdt_refactored_cache",
  "pretraining": {
    "enabled": false,
    "dataset_path": "./multirx_analysis_dataset_onerow_oneobs.parquet",
    "treatment_column": "treatment",
    "architecture": {
      "embedding_model_name": "all-MiniLM-L6-v2",
      "dragonnet_representation_dim": 128,
      "dragonnet_hidden_outcome_dim": 64,
      "aggregator_mode": "attn",
      "num_latent_confounders": 200,
      "features_per_confounder": 4,
      "explicit_confounder_texts": [
        "What is the patient's age and health status?",
        "What comorbidities does the patient have?"
      ],
      "chunk_size": 128,
      "chunk_overlap": 32
    },
    "training": {
      "learning_rate": 0.00001,
      "optimizer": "adamw",
      "lr_schedule": "linear",
      "epochs": 1,
      "batch_size": 8,
      "alpha_propensity": 1.0,
      "beta_targreg": 0.1,
      "init_latents_from_kmeans": true
    }
  },
  "applied_inference": {
    "dataset_path": "./analysis_dataset.parquet",
    "text_column": "clinical_text",
    "outcome_column": "outcome_indicator",
    "treatment_column": "treatment_indicator",
    "split_column": "split",
    "architecture": {
      "embedding_model_name": "all-MiniLM-L6-v2",
      "dragonnet_representation_dim": 128,
      "dragonnet_hidden_outcome_dim": 64,
      "aggregator_mode": "attn",
      "num_latent_confounders": 200,
      "features_per_confounder": 4,
      "explicit_confounder_texts": null,
      "chunk_size": 128,
      "chunk_overlap": 32
    },
    "training": {
      "learning_rate": 0.00001,
      "optimizer": "adamw",
      "lr_schedule": "linear",
      "epochs": 200,
      "batch_size": 8,
      "alpha_propensity": 1.0,
      "beta_targreg": 0.1,
      "init_latents_from_kmeans": true
    },
    "use_pretrained_weights": true
  },
  "plasmode_experiments": {
    "enabled": true,
    "num_repeats":  500,
    "save_datasets": true,
    "generator_architecture": {
      "embedding_model_name": "all-MiniLM-L6-v2",
      "dragonnet_representation_dim": 128,
      "dragonnet_hidden_outcome_dim": 64,
      "aggregator_mode": "attn",
      "num_latent_confounders": 200,
      "features_per_confounder": 4,
      "explicit_confounder_texts": null,
      "chunk_size": 128,
      "chunk_overlap": 32
    },
    "generator_training": {
      "learning_rate": 0.00001,
      "optimizer": "adamw",
      "lr_schedule": "linear",
      "epochs": 200,
      "batch_size": 8,
      "alpha_propensity": 1.0,
      "beta_targreg": 0.1,
      "init_latents_from_kmeans": true
    },
    "evaluator_architecture": {
      "embedding_model_name": "all-MiniLM-L6-v2",
      "dragonnet_representation_dim": 128,
      "dragonnet_hidden_outcome_dim": 64,
      "aggregator_mode": "attn",
      "num_latent_confounders": 50,
      "features_per_confounder": 4,
      "explicit_confounder_texts": null,
      "chunk_size": 128,
      "chunk_overlap": 32
    },
    "evaluator_training": {
      "learning_rate": 0.00001,
      "optimizer": "adamw",
      "lr_schedule": "linear",
      "epochs": 200,
      "batch_size": 8,
      "alpha_propensity": 1.0,
      "beta_targreg": 0.01,
      "init_latents_from_kmeans": true
    },
    "plasmode_scenarios": [
      {
        "generation_mode": "phi_linear",
        "preserve_observed_treatments": true,
        "baseline_control_outcome_rate": 0.2,
        "target_ate_logit": 0.5,
        "outcome_heterogeneity_scale": 1.0,
        "ite_heterogeneity_scale": 1.0,
        "deep_nonlinear_hidden_dims": [
          64,
          32
        ],
        "deep_nonlinear_dropout": 0.0,
        "uplift_hidden_dims": [],
        "uplift_activation": "relu",
        "uplift_dropout": 0.0
      }
    ]
  }
}
