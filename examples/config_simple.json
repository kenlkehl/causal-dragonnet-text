{
  "output_dir": "./cdt_results_simple",
  "seed": 42,
  "device": "cuda:0",
  "num_workers": 1,
  "cache_dir": "./cache",
  
  "pretraining": {
    "enabled": false
  },
  
  "applied_inference": {
    "dataset_path": "./analysis_dataset.parquet",
    "text_column": "clinical_text",
    "outcome_column": "outcome_indicator",
    "treatment_column": "treatment_indicator",
    "split_column": "split",
    
    "architecture": {
      "embedding_model_name": "all-MiniLM-L6-v2",
      "dragonnet_representation_dim": 128,
      "dragonnet_hidden_outcome_dim": 64,
      "aggregator_mode": "attn",
      "num_latent_confounders": 20,
      "features_per_confounder": 1,
      "chunk_size": 128,
      "chunk_overlap": 32
    },
    
    "training": {
      "learning_rate": 0.0001,
      "optimizer": "adamw",
      "lr_schedule": "linear",
      "epochs": 50,
      "batch_size": 8,
      "alpha_propensity": 1.0,
      "beta_targreg": 0.1
    },
    
    "use_pretrained_weights": false
  },
  
  "plasmode_experiments": {
    "enabled": false
  }
}
